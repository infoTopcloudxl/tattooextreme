<section class="rex-slider">
    <div class="video-bg"
         data-vide-bg="mp4: {{ asset('/assets/videos/video-1.mp4') }},
                       webm: http://basekit-packages.s3.amazonaws.com/bk-feature-video.webm,
                       poster: http://basekit-packages.s3.amazonaws.com/rd-feature-video.jpg
         "
         data-vide-options="posterType: jpg"
    >
    </div>
    <div class="container video">
        <div class="rex-caption">
            <h3 class="wow fadeInLeft"
                data-wow-duration="1s"
                data-wow-delay="0.5s"
                style="visibility: visible;
                       animation-duration: 1s;
                       animation-delay: 0.5s;
                       animation-name: fadeInLeft;
                "
            >
                {# text  #}
            </h3>
            <h1 class="wow fadeInLeft"
                data-wow-duration="1s"
                data-wow-delay="0.7s"
                style="visibility: visible;
                       animation-duration: 1s;
                       animation-delay: 0.7s;
                       animation-name: fadeInLeft;
                "
            >
                Maak een Afspraak
            </h1>
            
            <div class="wow fadeInLeft" data-wow-duration="1.4s" data-wow-delay="0.9s" href="#">
                {{widget('button', 'slide2-button', {
                  'text': 'Boek NU!'
                })|raw}}
            </div>
        </div>
    </div>
</section>
